<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../layout/head') %>
  <title>Search Results</title>
</head>

<body>
  <section id="searchResult">
    <header>
      <%- include('../layout/header') %>
    </header>
    <h1><%= searchedWord.toUpperCase() %></h1>
    <h3>Definitions:</h3>
    <ul>
      <% word[0].forEach(element => { %>
      <li><%= element %></li>
      <% }) %>
    </ul>

    <h3>Synonyms:</h3>
    <ul>
      <% word[1].forEach(element => { %>
      <li><%= element %></li>
      <% }) %>
    </ul>

    <h3>Quotes:</h3>
    <ul>
      <li> <%= word[2] %> </li>
    </ul>

    <h3>Pic:</h3>
    <ul>
      <li><img src="<%= word[3].image_url %>"></li>
    </ul>

    <form action="/add" method="POST">
      <fieldset>
        <input type="hidden" name="word" value="<%= searchedWord %>">
        <% word[0].forEach((element, indx) => { %>
        <input type="hidden" name="definitions[]" value="<%= element %>">
        <% }) %>
        <% word[1].forEach(element => { %>
        <input type="hidden" name="synonyms[]" value="<%= element %>">
        <% }) %>
        <% var pic = word[3].image_url ? word[3].image_url : 'https://upload.wikimedia.org/wikipedia/commons/3/3b/Picture_Not_Yet_Available.png' %>
        <input type="hidden" name="image_url" value="<%= pic %>">
        <input type="hidden" name="quote" value="<%= word[2] %>">
        <button type="submit">SAVE</button>
      </fieldset>
    </form>
  </section>
</body>

</html>
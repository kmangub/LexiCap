<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Word Collection</title>
</head>
<body>
  <% wordList.forEach(word => { %>
    <h1><%= word.word %></h1>
    <h3>Definitions:</h3>
    <ul>
      <% word.definitions.forEach(innerWord => { %>
        <li><%= innerWord %></li>
        <% }) %>
    </ul>
    <h3>Synonyms:</h3>
    <ul>
      <% word.synonyms.forEach(innerWord => { %>
        <li><%= innerWord %></li>
        <% }) %>
    </ul>
    <h3>Quotes:</h3>
    <ul>
      <li> <%= word.quote %> </li>
    </ul>
    <h3>Pic:</h3>
    <ul>
      <li><img src="<%= word.image_url %>"></li>
    </ul>
    <form action="/delete ?_method=DELETE" method="POST">
      <fieldset>
        <input type="hidden" name="word" value="">
        <input type="hidden" name="definitions" value="<% word.definitions %>">
        <input type="hidden" name="synonyms" value="<% word.synonyms %>">
        <input type="hidden" name="image_url" value="<%= word.image_url %>">
        <input type="hidden" name="quote" value="<%= word.quote %>">
        <button type="submit">Delete</button>
      </fieldset>
    </form>
  <% }); %>

</body>

</html>
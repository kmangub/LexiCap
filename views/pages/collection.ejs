<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layout/head') %>
    <title>My Collection</title>
  </head>  


  <body>
    <header>
      <%- include('../layout/header') %>
    </header>
    <% wordList.forEach(word => { %>
    <section id="flashCard">
      <ul>
        <li><img src="<%= word.image_url %>" id="pic"></li>
      </ul>
    <u><h1 id="wordTitle"><%= word.word %></h1></u>
    <br>
    <br>
    <h3>Definitions:</h3>
    <ul>
      <% word.definitions.forEach(innerWord => { %>
        <li><%= innerWord %></li>
        <% }) %>
    </ul>
    <br>
    <br>
    <h3>Synonyms:</h3>
    <ul>
      <% word.synonyms.forEach(innerWord => { %>
        <li id="synonyms"><%= innerWord %></li>
        <% }) %>
    </ul>
    <br>
    <br>
    <% if (word.quote) { %>

      <h3>Quotes:</h3>
      <ul>
        <li> "<%= word.quote %>" </li>
      </ul>
    <% } %>
    <br>
    <br>
    <form action="/delete/<%= word.id %>?_method=DELETE" method="POST">
      <fieldset>
        <input type="hidden" name="words" value="<%= wordList %>">
        <input type="hidden" name="id" value="<%= word.id %>">      
        <button type="submit">Delete</button>
      </fieldset>
    </form>
  </section>
  <% }); %>

</body>

</html>